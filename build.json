{
  "builders": [
    {
      "CPUs": 4,
      "memory": 4096,
      "disk_size": "10G",
      "disk_interface": "virtio-scsi",
      "accelerator": "kvm",
      "headless": false,
      "format": "qcow2",
      "boot_wait": "2s",
      "boot_command": [
        "<enter><enter><f6><esc><wait> ",
        " ipv6.disable=1 autoinstall ds=nocloud",
        "<enter><wait>"
      ],

      "floppy_label": "cidata",
      "floppy_files": [
        "./user-data",
        "./meta-data"
      ],
      "net_device": "virtio-net",
      "iso_url": "https://releases.ubuntu.com/20.04.2/ubuntu-20.04.2-live-server-amd64.iso",
      "iso_checksum": "sha256:d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",
      "ssh_password": "ubuntu",
      "ssh_username": "ubuntu",
      "ssh_timeout": "20m",
      "ssh_handshake_attempts": "200",
      "type": "qemu",
      "vm_name": "{{user `template_name`}}"
    }
  ],
  "provisioners": [
    {
      "playbook_file": "./playbooks/standard.yml",
      "type": "ansible",
      "command": "./run-ansible.sh",
      "user": "ubuntu",
      "extra_arguments": [ "-b" ]
    },
    {
      "override": {
        "qemu": {
          "execute_command": "sudo bash {{.Path}}"
        }
      },
      "script": "./scripts/cleanup.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "packer_bastion_host": "{{env `PACKER_BASTION_HOST`}}",
    "packer_bastion_key": "{{env `PACKER_BASTION_KEY`}}",
    "template_name": "test_vm"
  }
}

